<h2>SKILL I CAN OFFER (chose one)</h2>

  <form>
  <select name="skills_offer">
  {{#each skills}}
      <option value="{{this.dataValues.skill_name}}">{{this.dataValues.skill_name}}
      </option>
  {{/each}}
  </select>
 

<h2>SKILL I NEED (chose as many as you like)</h2>


    {{#each skills}}
      <input type="checkbox" name="{{this.dataValues.skill_name}}" value="{{this.dataValues.skill_name}}">{{this.dataValues.skill_name}}<br>
  {{/each}}

<input type="submit">

  </form>